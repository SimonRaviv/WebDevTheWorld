<!DOCTYPE html>
<html>

<head>
	<meta charset="utf-8" />
	<title>The world - @ViewBag.Title</title>
	<link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
	<div id="sidebar">
		<img src="~/img/me.jpg" alt="headshot" class="headshot" />
		<span id="user_name">The world</span>
		<ul class="menu">
			<li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
			<li><a asp-controller="App" asp-action="About">About</a></li>
			<li><a asp-controller="App" asp-action="Contact">Contact</a></li>
		</ul>
	</div>

	<div id="wrapper">
		<div id="main">
			<div>
				<button id="sidebar_toggle">Toggle menu</button>
			</div>
			@RenderBody()
		</div>
		<div id="footer">
			&copy; The world Ltd.
		</div>
	</div>

	<script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
	@RenderSection("scripts", false)

	<script type="text/javascript" src="~/js/site.js"></script>

</body>

</html>
